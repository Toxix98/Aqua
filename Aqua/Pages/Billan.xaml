<Page x:Class="Aqua.Pages.Billan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Aqua.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1010"
      Title="Billan" Background="WhiteSmoke">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Background="WhiteSmoke" CornerRadius="5 5 0 0" Grid.ColumnSpan="2">
            <Grid HorizontalAlignment="Center" Margin="10,0,0,0" Width="1000">
                <TextBox x:Name="txtSearch" Height="30" Width="283" Background="WhiteSmoke" Foreground="Black"
                 FontSize="15"
                 FlowDirection="RightToLeft"
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Dirooz FD" BorderBrush="#3a3a3a" Margin="507,47,210,23" >

                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <TextBlock Text="تا تاریخ" Style="{StaticResource MenoIconText}" FontFamily="Dirooz FD" FontSize="15" Margin="430,47,520,23"/>

                <TextBox x:Name="txtserach2" Margin="128,45,584,0" Height="30" Width="288" Background="WhiteSmoke" Foreground="Black"
                 FontSize="15"
                 VerticalAlignment="Top" FlowDirection="RightToLeft"
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontFamily="Dirooz FD" BorderBrush="#3a3a3a" >

                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <TextBlock Text="از تاریخ" Margin="809,47,141,0" Style="{StaticResource MenoIconText}" FontFamily="Dirooz FD" FontSize="15" VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <Border Background="WhiteSmoke" CornerRadius="0 0 0 5" Grid.Column="0" Grid.Row="1">
            <Border Grid.Column="1" Grid.Row="0" Margin="10 0 10 5">
                <StackPanel>
                    <DataGrid Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Grid.Row="5" x:Name="BillanNeg" Height="430" MaxHeight="650">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="تاریخ" IsReadOnly="True" Width="*" Binding="{Binding Bank}"/>
                            <DataGridTextColumn Header="قیمت" IsReadOnly="True" Width="*" Binding="{Binding Price}"/>
                            <DataGridTextColumn Header="نام" IsReadOnly="True" Width="*" Binding="{Binding Number}"/>
                            <DataGridTextColumn x:Name="IDNeg" Visibility="Hidden" Header="ردیف" IsReadOnly="True" Width="auto" Binding="{Binding Date}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Border>

        <Border Background="WhiteSmoke" CornerRadius="0 0 5 0" Grid.Column="1" Grid.Row="1">
            <Border Grid.Column="1" Grid.Row="0" Margin="10 0 10 5">
                <StackPanel>
                    <DataGrid Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" x:Name="BillanPlus" Height="430" MaxHeight="650">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="تاریخ" IsReadOnly="True" Width="*" Binding="{Binding Bank}"/>
                            <DataGridTextColumn Header="قیمت" IsReadOnly="True" Width="*" Binding="{Binding Price}"/>
                            <DataGridTextColumn Header="نام" IsReadOnly="True" Width="*" Binding="{Binding Number}"/>
                            <DataGridTextColumn x:Name="IDPlus" Visibility="Hidden" Header="ردیف" IsReadOnly="True" Width="auto" Binding="{Binding Date}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Border>

        <Border Grid.Row="2">
            <Grid>
                <Button Style="{StaticResource MenuButtonStorPage}" Width="170" Background="#469126" Content="بیلان گیری" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50 0 0 0"/>
                <Button Style="{StaticResource MenuButtonStorPage}" Width="170" Background="#53ad2b" Content="ثبت" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 50 0"/>
            </Grid>
        </Border>

        <Border Grid.Column="1" Grid.Row="2">
            <Grid>
                <Button Style="{StaticResource MenuButtonStorPage}" Width="170" Margin="50,0,0,0" Background="Red" Content="حذف" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Button Style="{StaticResource MenuButtonStorPage}" Width="170" Margin="0,0,50,0" Background="#1067aa" Content="صفر کردن" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

    </Grid> 
</Page>
